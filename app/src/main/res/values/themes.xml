<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OWNews" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/pickled_bluewood</item>
    </style>

    <style name="Theme.OWNews" parent="Base.Theme.OWNews" />

    <style name="roundedCornerImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="MaterialToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textAppearance">@style/TextAppearance.Octarine.Bold.Body1</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.MaterialAlertDialog" parent="Base.ThemeOverlay.MaterialComponents.MaterialAlertDialog" tools:ignore="PrivateResource">
        <item name="materialAlertDialogTitlePanelStyle">
            @style/MaterialAlertDialog.MaterialComponents.Title.Panel
        </item>
        <item name="materialAlertDialogTitleIconStyle">
            @style/MaterialAlertDialog.MaterialComponents.Title.Icon
        </item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/MaterialAlertDialog.MaterialComponents.Title.Text
        </item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.MaterialAlertDialog.Centered" parent="Base.ThemeOverlay.MaterialComponents.MaterialAlertDialog" tools:ignore="PrivateResource">
        <item name="materialAlertDialogTitlePanelStyle">
            @style/MaterialAlertDialog.MaterialComponents.Title.Panel.CenterStacked
        </item>
        <item name="materialAlertDialogTitleIconStyle">
            @style/MaterialAlertDialog.MaterialComponents.Title.Icon.CenterStacked
        </item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked
        </item>
    </style>

    <style name="TextInputLayout.Login.Form.Outlined.Dense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/alto</item>
        <item name="boxStrokeWidth">@dimen/_1dp</item>
        <item name="boxStrokeWidthFocused">@dimen/_1dp</item>
        <item name="errorTextAppearance">@style/TextAppearance.Octarine.Light.Caption</item>
        <item name="hintTextAppearance">@style/TextAppearance.Octarine.Light.Caption</item>
        <item name="placeholderTextAppearance">@style/TextAppearance.Octarine.Light.Body2</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.Octarine.Light.Caption</item>
    </style>

    <style name="BottomSheetStyle" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_white</item>
    </style>

    <style name="BottomSheetTheme" parent="BaseBottomSheetStyle">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="BaseBottomSheetStyle" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="TextAppearance.Octarine.Bold.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/octarine_bold</item>
    </style>

    <style name="TextAppearance.Octarine.Bold.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/octarine_bold</item>
    </style>

    <style name="TextAppearance.Octarine.Bold.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/octarine_bold</item>
    </style>

    <style name="TextAppearance.Octarine.Light.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/octarine_light</item>
    </style>

    <style name="TextAppearance.Octarine.Bold.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/octarine_bold</item>
    </style>

    <style name="TextAppearance.Octarine.Bold.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/octarine_bold</item>
    </style>

    <style name="TextAppearance.Octarine.Light.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/octarine_light</item>
    </style>

    <style name="TextAppearance.Octarine.Bold.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/octarine_bold</item>
    </style>

    <style name="TextAppearance.Octarine.Light.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/octarine_light</item>
    </style>

    <style name="TextAppearance.Octarine.Light.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/octarine_light</item>
    </style>

    <style name="TextAppearance.Nunito.Bold.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/nunito_sans_bold</item>
    </style>

    <style name="TextAppearance.Nunito.Light.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/nunito_sans_light</item>
    </style>

    <style name="TextAppearance.Nunito.Light.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/nunito_sans_light</item>
    </style>

</resources>